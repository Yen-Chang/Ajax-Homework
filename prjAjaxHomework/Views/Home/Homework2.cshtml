<h1>Homework2</h1>

<div class="container">
    <div class="row" id="Cards">
        <div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Travel.js"></script>
    <script>

        const datas = spots.CommonFormat.Section;
        const theCards = datas.map((theCard, idx) => {

            const { stitle, xbody, file } = theCard;
            let imgName = theCard.file.img;
            if (imgName.length > 0) {
                imgName = imgName[0].text;
            }
            else {
                imgName = imgName.text;
            }
            return (`<div class="card col-4" style="max-height:600px ;">
                                <img src="${imgName}" class="card-img-top">
                                    <div class="card-body">
                                    <h5 class="card-title">${stitle}</h5>
                                    <p class="card-text">${xbody}</p>
                                    </div>
                                  </div>
                               `);
        })
        document.querySelector("#Cards").innerHTML = theCards.join("");
    </script>
}

